{
  "name": "socialMediaPost",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "idx_uniq": {
      "keys": {
        "post_id": 1,
        "featurizer": 1
      },
      "options": {
        "unique": true
      }
    },
    "idx_timestamp_ms": {
      "keys": {
        "timestamp_ms": 1
      }
    },
    "idx_state": {
      "keys": {
        "state": 1
      }
    },
    "idx_lang": {
      "keys": {
        "lang": 1
      }
    },
    "idx_primary_image_url": {
      "keys": {
        "primary_image_url": 1
      }
    }
  },
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "DestroyAll": {}
  },
  "properties": {
    "system_created": {
      "type": "date",
      "default": "$now",
      "description": "internal system timestamp. not using Timestamp mixin, to clearly differentiate from original post time."
    },
    "post_id": {
      "type": "string",
      "required": true
    },
    "post_type": {
      "type": "string",
      "required": true
    },
    "post_url": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "string",
      "default": ""
    },
    "lang": {
      "type": "string",
      "default": ""
    },
    "hashtags": {
      "type": [
        "string"
      ],
      "default": []
    },
    "image_urls": {
      "type": [
        "object"
      ],
      "default": []
    },
    "featurizer": {
      "type": "string",
      "required": true,
      "description": "processing type: image, text, hashtag"
    },
    "timestamp_ms": {
      "type": "number",
      "required": true
    },
    "state": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "image_features": {
      "type": [
        "number"
      ],
      "default": []
    },
    "text_features": {
      "type": [
        "number"
      ],
      "default": []
    },
    "primary_image_url": {
      "type": "string"
    },
    "primary_image_download_path": {
      "type": "string"
    },
    "campaigns": {
      "type": [
        "string"
      ],
      "default": []
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
